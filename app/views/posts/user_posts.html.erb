<h1>All the posts for <%= @user.username.capitalize %></h1>

<% @user.posts.each do |post| %>
	<div class="well" style= "background-color: lightgreen">
		<h3><%= post.user.username %></h3> says... <br/>
		<p><%= post.blog_entry.html_safe %></p>

		<% post.comments.each do |comment| %>
			<div class="well" style="background-color: pink">
			<%= comment.user.username %> commented ... <br/>
			<%= comment.comment_entry %>
			</div>
			<% end %>
	</div>

<% end %>